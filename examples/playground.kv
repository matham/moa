#:kivy 1.8.1
#:import Factory kivy.factory.Factory

<StageDisplay@StageTreeNode+StageSimpleDisplay>


<RootStage>:
    name: 'Root stage'
    completion_list: self.stages
    StageDisplay
    Delay:
        name: '1st stage'
        delay: self.count + .5
        repeat: 10
        completion_type: 'all'
        StageDisplay
        Delay:
            name: 'Inner stage'
            delay: 0.025 * self.count + 0.125
            repeat: 20
            StageDisplay
    Delay:
        name: '2nd stage'
        delay: 0.025 * self.count + 0.125
        repeat: 10
        StageDisplay
    Delay:
        name: '3nd stage'
        delay: 0.025 * self.count + 0.125
        repeat: 10
        StageDisplay
